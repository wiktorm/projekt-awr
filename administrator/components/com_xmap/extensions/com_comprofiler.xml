<?xml version="1.0" encoding="iso-8859-1"?>
<install type="xmap_ext" version="1.5.0">
        <name>Community Builder User Lists Plugin</name>
        <author>Joomla-R-Us</author>
        <creationDate>Aug 6 2009</creationDate>
        <copyright>GNU GPL</copyright>
        <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
        <authorEmail>info@joomla-r-us.com</authorEmail>
        <authorUrl>http://joomla-r-us.com</authorUrl>
        <version>1.1</version>
        <description>Plugin for Community Builder User Lists</description>
        <files>
                <filename xmap_ext="com_comprofiler">com_comprofiler.php</filename>
        </files>
        <params>
                <param name="show_plinks" type="list" default="1" label="Links to Profile Pages" description="Include links to the user profile pages in the published User Lists.">
                        <option value="0">Never</option>
                        <option value="1">Always</option>
                        <option value="2">In XML Sitemap Only</option>
                        <option value="3">In Site Sitemap Only</option>
                </param>
                <param name="user_priority" type="list" default="0.5" label="User Profile Priority" description="Set the priority for the user profile pages">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="0.0">0.0</option>
                        <option value="0.1">0.1</option>
                        <option value="0.2">0.2</option>
                        <option value="0.3">0.3</option>
                        <option value="0.4">0.4</option>
                        <option value="0.5">0.5</option>
                        <option value="0.6">0.6</option>
                        <option value="0.7">0.7</option>
                        <option value="0.8">0.8</option>
                        <option value="0.9">0.9</option>
                        <option value="1">1</option>
                </param>
                <param name="user_changefreq" type="list" default="weekly" label="User Profile Change frequency" description="Set the change frequency for the user profile pages">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="always">Always</option>
                        <option value="hourly">Hourly</option>
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="never">Never</option>
                </param>

        </params>
</install>